@model List<BlogModel>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Blog";
    int count = 0;
}

<h1>Blog Page</h1>
<a href="/EFCoreBlog/Create" class="btn btn-primary m-auto">Add New</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Content</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(BlogModel item in Model)
        {
            <tr>
                <th scope="row">@(+count)</th>
                <td>@item.BlogId</td>
                <td>@item.BlogTitle</td>
                <td>@item.BlogAuthor</td>
                <td>@item.BlogContent</td>
                <td>
                    <a href="/EFCoreBlog/Edit/@item.BlogId" class="btn btn-warning">Edit</a>
                    <a href="/EFCoreBlog/Delete/@item.BlogId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }              
    </tbody>
</table>