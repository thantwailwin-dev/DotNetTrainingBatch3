@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Blog";
}

<form action="/EFCoreBlog/Save" method="post">
    <div class="mb-3">
        <label class="form-label">Blog Title</label>
        <input type="text" class="form-control" name="BlogTitle">
    </div>
    <div class="mb-3">
        <label class="form-label">Blog Author</label>
        <input type="text" class="form-control" name="BlogAuthor">
    </div>
    <div class="mb-3">
        <label class="form-label">Blog Content</label>
        <input type="text" class="form-control" name="BlogContent">
    </div>

    <a href="/EFCoreBlog" class="btn btn-secondary">Back</a>
    <button type="submit" class="btn btn-success">Save</button>
</form>


